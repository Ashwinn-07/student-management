<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Management System</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .glass-effect {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }
      .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }
      .hover-scale {
        transition: transform 0.2s;
      }
      .hover-scale:hover {
        transform: scale(1.02);
      }
      .nav-link {
        color: white;
        transition: opacity 0.2s;
      }
      .nav-link:hover {
        color: white;
        opacity: 0.8;
      }
    </style>
  </head>
  <body class="gradient-bg min-vh-100">
    <nav class="navbar navbar-expand-lg glass-effect">
      <div class="container">
        <a class="navbar-brand text-white fw-bold" href="/">
          <i class="fas fa-graduation-cap me-2"></i>
          StudentMS
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>

    <div class="container py-5">
      <div class="text-center mb-5">
        <h1 class="display-4 text-white fw-bold mb-4">
          Student Management System
        </h1>
        <button
          class="btn btn-light px-4 py-2 shadow-sm hover-scale"
          data-bs-target="#exampleModalToggle"
          data-bs-toggle="modal"
        >
          <i class="fas fa-plus-circle me-2"></i>Add New Student
        </button>
      </div>

      <div class="row justify-content-center mb-4">
        <div class="col-md-6">
          <form
            action="/search"
            method="get"
            class="glass-effect rounded-pill p-2 d-flex align-items-center"
          >
            <i class="fas fa-search text-white ms-3"></i>
            <input
              type="search"
              name="str"
              class="form-control border-0 bg-transparent text-white ms-2"
              placeholder="Search students..."
              oninput="this.value = this.value"
              style="box-shadow: none"
            />
          </form>
        </div>
      </div>

      <div class="glass-effect rounded-3 p-4">
        <div class="table-responsive">
          <table class="table table-borderless text-white mb-0">
            <thead>
              <tr class="border-bottom border-white border-opacity-25">
                <th>No</th>
                <th>Name</th>
                <th>Place</th>
                <th>Standard</th>
                <th>Medium</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if(StudentData && StudentData.length > 0){ %> <%
              StudentData.forEach((val,index)=>{ %>
              <tr
                class="hover-scale border-bottom border-white border-opacity-10"
              >
                <td><%= ++index %></td>
                <td><%= val.name %></td>
                <td><%= val.place %></td>
                <td><%= val.standard %></td>
                <td><%= val.medium %></td>
                <td class="text-end">
                  <button
                    class="btn btn-sm btn-light me-2"
                    onclick="window.location.href = '/editStudent?_id=<%=val._id%>'"
                  >
                    <i class="fas fa-edit"></i>
                  </button>
                  <button
                    class="btn btn-sm btn-danger"
                    onclick="window.location.href = '/deleteStudent?_id=<%=val._id%>'"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4">No students found</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Add Student Modal -->
    <div
      class="modal fade"
      id="exampleModalToggle"
      aria-hidden="true"
      aria-labelledby="exampleModalToggleLabel"
      tabindex="-1"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
          <div class="modal-header border-bottom border-secondary">
            <h5 class="modal-title">Add New Student</h5>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form action="/addStudent" method="post">
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control bg-secondary text-white"
                  name="name"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Place</label>
                <input
                  type="text"
                  class="form-control bg-secondary text-white"
                  name="place"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Standard</label>
                <input
                  type="text"
                  class="form-control bg-secondary text-white"
                  name="standard"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Medium</label>
                <input
                  type="text"
                  class="form-control bg-secondary text-white"
                  name="medium"
                  required
                />
              </div>
            </div>
            <div class="modal-footer border-top border-secondary">
              <button type="submit" class="btn btn-primary px-4">
                Add Student
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
  </body>
</html>
