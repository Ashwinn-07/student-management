<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Management System</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      html[data-theme="dark"] {
        --bg-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --glass-bg: rgba(255, 255, 255, 0.1);
        --text-color: #ffffff;
        --input-bg: rgba(255, 255, 255, 0.1);
        --modal-bg: #212529;
        --border-color: rgba(255, 255, 255, 0.2);
      }

      html[data-theme="light"] {
        --bg-gradient: linear-gradient(135deg, #f6f9fc 0%, #e9ecef 100%);
        --glass-bg: rgba(255, 255, 255, 0.9);
        --text-color: #212529;
        --input-bg: rgba(255, 255, 255, 0.9);
        --modal-bg: #ffffff;
        --border-color: rgba(0, 0, 0, 0.1);
      }

      .glass-effect {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
      }

      .gradient-bg {
        background: var(--bg-gradient);
      }

      .hover-scale {
        transition: transform 0.2s;
      }

      .hover-scale:hover {
        transform: scale(1.02);
      }

      .nav-link {
        color: var(--text-color);
        transition: opacity 0.2s;
      }

      .nav-link:hover {
        color: var(--text-color);
        opacity: 0.8;
      }

      .theme-switcher {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
      }

      .theme-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid var(--border-color);
        background: var(--glass-bg);
        color: var(--text-color);
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .theme-btn:hover {
        transform: scale(1.1);
      }

      .table {
        color: var(--text-color) !important;
      }

      .modal-content {
        background: var(--modal-bg);
        color: var(--text-color);
      }

      .form-control {
        background-color: var(--input-bg) !important;
        color: var(--text-color) !important;
        border-color: var(--border-color);
      }

      .form-control:focus {
        background-color: var(--input-bg);
        border-color: var(--border-color);
        color: var(--text-color);
        box-shadow: 0 0 0 0.25rem rgba(255, 255, 255, 0.1);
      }

      .form-control::placeholder {
        color: var(--text-color);
        opacity: 0.7;
      }
    </style>
  </head>
  <body class="gradient-bg min-vh-100">
    <nav class="navbar navbar-expand-lg glass-effect">
      <div class="container">
        <a class="navbar-brand" style="color: var(--text-color)" href="/">
          <i class="fas fa-graduation-cap me-2"></i>
          StudentMS
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>

    <div class="theme-switcher">
      <button class="theme-btn" id="themeToggle">
        <i class="fas fa-sun" id="themeIcon"></i>
      </button>
    </div>

    <div class="container py-5">
      <div class="text-center mb-5">
        <h1 class="display-4" style="color: var(--text-color)">
          Student Management System
        </h1>
        <button
          class="btn btn-light px-4 py-2 shadow-sm hover-scale"
          data-bs-target="#exampleModalToggle"
          data-bs-toggle="modal"
        >
          <i class="fas fa-plus-circle me-2"></i>Add New Student
        </button>
      </div>

      <div class="row justify-content-center mb-4">
        <div class="col-md-6">
          <form
            id="searchForm"
            action="/search"
            method="get"
            class="glass-effect rounded-pill p-2 d-flex align-items-center"
          >
            <i class="fas fa-search ms-3" style="color: var(--text-color)"></i>
            <input
              type="search"
              id="searchInput"
              name="str"
              class="form-control border-0 bg-transparent"
              placeholder="Search students..."
              oninput="liveSearch()"
              style="box-shadow: none"
            />
          </form>
        </div>
      </div>

      <div class="glass-effect rounded-3 p-4">
        <div class="table-responsive">
          <table class="table table-borderless mb-0">
            <thead>
              <tr
                class="border-bottom"
                style="border-color: var(--border-color) !important"
              >
                <th>No</th>
                <th>Name</th>
                <th>Place</th>
                <th>Standard</th>
                <th>Medium</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if(StudentData && StudentData.length > 0){ %> <%
              StudentData.forEach((val,index)=>{ %>
              <tr
                class="hover-scale border-bottom"
                style="border-color: var(--border-color) !important"
              >
                <td><%= ++index %></td>
                <td><%= val.name %></td>
                <td><%= val.place %></td>
                <td><%= val.standard %></td>
                <td><%= val.medium %></td>
                <td class="text-end">
                  <button
                    class="btn btn-sm btn-light me-2"
                    onclick="window.location.href = '/editStudent?_id=<%=val._id%>'"
                  >
                    <i class="fas fa-edit"></i>
                  </button>
                  <button
                    class="btn btn-sm btn-danger"
                    onclick="window.location.href = '/deleteStudent?_id=<%=val._id%>'"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4">No students found</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Add Student Modal -->
    <div
      class="modal fade"
      id="exampleModalToggle"
      aria-hidden="true"
      aria-labelledby="exampleModalToggleLabel"
      tabindex="-1"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header" style="border-color: var(--border-color)">
            <h5 class="modal-title">Add New Student</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
              style="filter: invert(var(--text-invert))"
            ></button>
          </div>
          <form action="/addStudent" method="post">
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" required />
              </div>
              <div class="mb-3">
                <label class="form-label">Place</label>
                <input type="text" class="form-control" name="place" required />
              </div>
              <div class="mb-3">
                <label class="form-label">Standard</label>
                <input
                  type="text"
                  class="form-control"
                  name="standard"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Medium</label>
                <input
                  type="text"
                  class="form-control"
                  name="medium"
                  required
                />
              </div>
            </div>
            <div class="modal-footer" style="border-color: var(--border-color)">
              <button type="submit" class="btn btn-primary px-4">
                Add Student
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      // Theme Management
      document.addEventListener("DOMContentLoaded", function () {
        const themeToggle = document.getElementById("themeToggle");
        const themeIcon = document.getElementById("themeIcon");

        const savedTheme = localStorage.getItem("theme") || "dark";
        document.documentElement.setAttribute("data-theme", savedTheme);
        updateThemeIcon(savedTheme);

        themeToggle.addEventListener("click", () => {
          const currentTheme =
            document.documentElement.getAttribute("data-theme");
          const newTheme = currentTheme === "dark" ? "light" : "dark";

          document.documentElement.setAttribute("data-theme", newTheme);
          localStorage.setItem("theme", newTheme);
          updateThemeIcon(newTheme);
        });

        function updateThemeIcon(theme) {
          themeIcon.className = theme === "dark" ? "fas fa-sun" : "fas fa-moon";
        }
      });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
      $(document).ready(function () {
        $("#searchInput").on("input", function (event) {
          event.preventDefault();
          liveSearch();
        });

        $("#searchForm").on("submit", function (event) {
          event.preventDefault();
          liveSearch();
        });
      });

      function liveSearch() {
        const query = $("#searchInput").val();
        $.ajax({
          url: "/search",
          method: "GET",
          data: { str: query },
          success: function (data) {
            const tbody = $("table tbody");
            tbody.empty(); // Clear existing table rows
            if (data.length > 0) {
              data.forEach((student, index) => {
                tbody.append(`
              <tr class="hover-scale border-bottom" style="border-color: var(--border-color) !important">
                <td>${index + 1}</td>
                <td>${student.name}</td>
                <td>${student.place}</td>
                <td>${student.standard}</td>
                <td>${student.medium}</td>
                <td class="text-end">
                  <button class="btn btn-sm btn-light me-2" onclick="window.location.href = '/editStudent?_id=${
                    student._id
                  }'">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-sm btn-danger" onclick="window.location.href = '/deleteStudent?_id=${
                    student._id
                  }'">
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
            `);
              });
            } else {
              tbody.append(
                '<tr><td colspan="6" class="text-center py-4">No students found</td></tr>'
              );
            }
          },
          error: function () {
            console.error("Error fetching search results");
          },
        });
      }
    </script>
  </body>
</html>
